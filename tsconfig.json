{
    "include": ["src/**/*"],
    "exclude": ["node_modules", ".embeddable-build", ".embeddable-dev-build", ".embeddable", ".embeddable-dev-temp"],
    "compilerOptions": {
        "types": ["node"],
        "moduleResolution": "node",
        "removeComments": true,
        "sourceMap": true,
        "target": "es2022",
        "outDir": "lib",
        "declaration": true,
        "strict": false,
        "module": "es2022",
        "noEmitOnError": true,
        "lib": ["dom"],
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "jsx": "react-jsx",
        "baseUrl": ".",
        "paths": {
            "@embeddable.com/sdk-react": ["node_modules/@embeddable.com/sdk-react"],
            "@embeddable.com/sdk-core": ["node_modules/@embeddable.com/sdk-core"]
        }
    }
}
